}

function oHaken_AnyClick()
{
	if (any_click_move(131, 115, eDirRight))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Ein Kleiderhaken zum Ausklappen.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Nehmen? Der ist am Schrank befestigt.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Ich habe nichts zum daran aufhängen. Und außerdem möchte ich nicht.");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			if ( oHaken.Graphic == 125 )
				player.Say("Wäre ausklappen nicht sinnvoller?");
			if ( oHaken.Graphic == 126 )
				player.Say("Wäre einklappen nicht sinnvoller?");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			if ( oHaken.Graphic == 125 )
				player.Say("Wäre ausklappen nicht sinnvoller?");
			if ( oHaken.Graphic == 126 )
				player.Say("Wäre einklappen nicht sinnvoller?");
		}
		else if (UsedAction(eActPull))
		{
			Wait(5);
			if ( oHaken.Graphic == 125 )
			{
				oHaken.Graphic = 126;
				oHaken.X = oHaken.X - 9;
			}
			else if ( oHaken.Graphic == 126 )
			{
				player.Say("Der ist schon ausgeklappt.");
			}
		}
		else if (UsedAction(eActPush))
		{
			Wait(5);
			if (oHaken.Graphic == 126)
			{
				oHaken.Graphic = 125;
				oHaken.X = oHaken.X + 9;
			}
			else if ( oHaken.Graphic == 125 )
			{
				player.Say("Der ist schon eingeklappt.");
			} 
		}
		else Unhandled();
	}
}

