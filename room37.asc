function oBuecher_AnyClick()
{
	if (any_click_move(86, 117, eDirUp))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Die Lieblingsbücher meiner Schwester.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Ich nehm meiner Schwester doch ihre Bücher nicht weg.");
			Wait(5);
			player.Say("Nicht mehr.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Die Bücher meiner Schwester mag ich nicht besonders. Ohne Grund nehm ich die nicht mit.");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Festgemauert in der Erden");
			player.Say("steht die Form, aus Lehm gebrannt.");
			player.Say("Heute muß die Glocke werden,");
			player.Say("Frisch, Gesellen, seid zur Hand.");
			player.Say("Von der Stirne heiß");
			player.Say("rinnen muß der Schweiß,");
			player.Say("soll das Werk den Meister loben,");
			player.Say("Doch der Segen kommt von oben.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Es liegen keine öffenen Bücher herum die ich schließen könnte.");
		}
		else if (UsedAction(eActPull))
		{
			Wait(5);
			player.Say("Ich nehm die Bücher nicht mit.");
		}
		else if (UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Damit sie herunter fallen?");
			player.Say("Nein danke.");
		}
		else Unhandled();
	}
}


