			// TODO Einfügen, Sandy auf der Toilette
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			if ( oKlobrilleAuf.Visible == true )
			{
				player.Say("Nochmals öffnen? Ich glaube nicht.");
			}
			else
			{
				PlaySound(85);
				oKlobrilleAuf.Visible = true;
			}
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			if ( oKlobrilleAuf.Visible == false )
			{
				player.Say("Ich glaube nicht.");
			}
			else
			{
				PlaySound(85);
				oKlobrilleAuf.Visible = false;
			}			
		}
		else if (UsedAction(eActPull))
		{
			Wait(5);
			player.Say("Sitzt solide an der Wand.");
		}
		else if (UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Rührt sich nicht.");
		}
		else Unhandled();
	}
}


