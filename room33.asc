function hSpuelkasten_AnyClick()
{
	if (any_click_move(117,116,eDirLeft))
	{
		if (UsedAction(eActWalkTo))
		{
			Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Der Spülkasten. Da passen 10 Liter Wasser rein.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Dazu ist die Kette da.");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Ich will nicht wissen, wie es da drin aussieht.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Der Spülkasten ist bereits geschlossen.");
		}
		else Unhandled();
	}
}

